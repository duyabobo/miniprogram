<scroll-view class="container" scroll-y="true">
  <!--默认action-sheet为隐藏，由button触发-->
  <action-sheet hidden="{{verifyPhoneSheetHidden}}" bindchange="updateVerifyPhoneSheetHidden" >
    <action-sheet-item >
      <input type="text" placeholder="输入手机号" bindinput="obtainPhone"/>
    </action-sheet-item>
    <action-sheet-item >
      <input class="code" type="text" placeholder="输入验证码" bindinput="obtainCode"/>
      <button class="code-button" bindtap="sendPhoneCode" disabled="{{sendPhoneCodeDisabled}}">{{sendCodeButtonText}}</button>
    </action-sheet-item>
    <!--自动隐藏action-sheet-->
    <action-sheet-cancel bindtap="checkPhoneCode">确认</action-sheet-cancel>
  </action-sheet> 
  
  <!--默认action-sheet为隐藏，由button触发-->
  <action-sheet hidden="{{verifyWorkSheetHidden}}" bindchange="updateVerifyWorkSheetHidden" >
    <action-sheet-item >
      <input type="text" placeholder="输入企业邮箱" bindinput="obtainWorkEmail"/>
    </action-sheet-item>
    <action-sheet-item >
      <input class="code" type="text" placeholder="输入验证码" bindinput="obtainWorkCode"/>
      <button class="code-button" bindtap="sendEmailCode" disabled="{{sendWorkCodeDisabled}}">{{sendEmailButonText}}</button>
    </action-sheet-item>
    <!--自动隐藏action-sheet-->
    <action-sheet-cancel bindtap="checkEmailCode">确认</action-sheet-cancel>
  </action-sheet> 

<!--  <button class="user-info" bindtap="verifyPhone">-->
<!--    <view class="desc">{{phoneVerify.desc}}</view>-->
<!--    <view class="value">{{phoneVerify.value}}</view>-->
<!--    <view class="navigator-arrow"></view>-->
<!--  </button>-->

  <button class="user-info" bindtap="verifyWork">
    <view class="desc">{{workVerify.desc}}</view>
    <view class="value">{{workVerify.value}}</view>
    <view class="navigator-arrow"></view>
  </button>
  <view class="line"></view>

  <button class="user-info" data-op_type="{{sex.opType}}" data-item_list="{{sex.choiceList}}" bindtap="upsertMyself">
    <view class="desc">{{sex.desc}}</view>
    <view class="value">{{sex.value}}</view>
    <view class="navigator-arrow"></view>
  </button>
  <view class="line"></view>

  <picker mode="date" value="{{birthYear.defaultValue}}" bindchange="updateBirthYear" fields="year" start="{{birthYear.start}}" end="{{birthYear.end}}">
    <button class="user-info">
      <view class="desc">{{birthYear.desc}}</view>
      <view class="value">{{birthYear.value}}</view>
      <view class="navigator-arrow"></view>
    </button>
  </picker>
  <view class="line"></view>

  <picker mode="selector" range="{{height.choiceList}}" value="{{height.defaultValue}}" bindchange="updateHeight">
    <button class="user-info">
      <view class="desc">{{height.desc}}</view>
      <view class="value">{{height.value}}</view>
      <view class="navigator-arrow"></view>
    </button>
  </picker>
  <view class="line"></view>

  <picker mode="selector" range="{{weight.choiceList}}" value="{{weight.defaultValue}}" bindchange="updateWeight">
    <button class="user-info">
      <view class="desc">{{weight.desc}}</view>
      <view class="value">{{weight.value}}</view>
      <view class="navigator-arrow"></view>
    </button>
  </picker>
  <view class="line"></view>

  <picker mode="selector" range="{{monthPay.choiceList}}" value="{{monthPay.defaultValue}}" bindchange="updateMonthPay">
    <button class="user-info">
      <view class="desc">{{monthPay.desc}}</view>
      <view class="value">{{monthPay.value}}</view>
      <view class="navigator-arrow"></view>
    </button>
  </picker>
  <view class="line"></view>

  <button class="user-info-and-line" wx:for="{{otherInfoList}}" wx:key="id" data-op_type="{{item.opType}}" data-item_list="{{item.choiceList}}" bindtap="upsertMyself">
    <view class="user-info">
      <view class="desc">{{item.desc}}</view>
      <view class="value">{{item.value}}</view>
      <view class="navigator-arrow"></view>
    </view>
    <view class="line"></view>
  </button>
</scroll-view>