<view class="question-and-background">
  <image class='background' src="{{question_background}}" mode="aspectFill"></image>
  <view class='question'>{{question}}</view>
</view>
  
<view class='answers'>
  <button wx:for="{{answers}}" wx:key="key" data-key="{{user_info_key}}" data-value='{{item.value}}' data-user_info_type='{{user_info_type}}' class='answer' bindtap="give_a_answer">{{item.key}}</button> 
</view>
