<view class="question-and-background">
  <image class='background' src="{{question_background}}" mode="aspectFill"></image>
  <view class='question'>{{question}}</view>
</view>
  
<view class='answers'>
  <button wx:for="{{answers}}" wx:key="key" data-value='{{item.value}}' data-step='{{step}}' class='answer' bindtap="answer_question">{{item.key}}</button> 
</view>

<view class='steps'>
  <image class='step' src="{{back_icon}}" data-incr='-1' data-step='{{step}}' bindtap='change_step'></image>
  <view class='just_for_fun'>
    <navigator class="just_for_fun_text" wx:if="{{step != 1}}" url="{{guanguan_url}}" open-type="reLaunch">随便逛逛</navigator>
  </view>
  <image class='step' src="{{front_icon}}" data-incr='1' data-step='{{step}}'  bindtap='change_step'></image> 
</view>
