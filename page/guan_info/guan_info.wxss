page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img {
  width: 750rpx;
  height: 446rpx; 
}

.address-time-people {
  display: flex;
  flex-direction: column;
}

.address-time {
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  margin: 15rpx;
  padding: 20rpx;
  border-radius: 20rpx;
}

.opposite {
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  margin: 15rpx;
  padding: 20rpx;
  border-radius: 20rpx;
}

.info {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  padding: 6rpx;
}

.address-desc {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  padding-left: 65rpx;
}

.people-desc {
  font-size: 30rpx;
}

.time-desc {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  padding-left: 65rpx;
}

.info-img { 
  height: 45rpx;
  width: 45rpx; 
  padding-right: 20rpx;
}

.address-text { 
  font-size:30rpx; 
}

.time-text {
  font-size:30rpx; 
  color: gray;
}

.people-info { 
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
  color: gray;
  margin: 10rpx;
  padding: 5rpx; 
}

.operate {
  width: 90%;
  color: #000000;
  background-color: #FF6600;
}
