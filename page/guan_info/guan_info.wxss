page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.activity {
  display: flex;
  flex-direction: column;
  width: 700rpx;
}

.img {
  width: 700rpx;
  height: 440rpx; 
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 10rpx 5rpx #e1e1e1;
}

.address-text {
  font-size: 45rpx;
  margin: 10rpx 30rpx 5rpx 30rpx;
}

.time-text {
  font-size: 30rpx;
  color: gray;
  margin: 0rpx 30rpx 10rpx 30rpx;
}

.people {
  width: 700rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: column; 
}

.opposite-info-pair {
  display: flex;
  flex-direction: row;
  margin: 5rpx 30rpx;
}

.opposite-info {
  display: flex;
  flex-direction: row;
  flex: 5;
}

.data-name {
  font-size: 30rpx;
  color: gray;
}

.data-value {
  font-size: 30rpx;
  margin-left: 10rpx;
}

.operate {
  color: white;
  background-color: orangered;
  width: 660rpx;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  border-radius: 20rpx;
}

.requirement_result {
  color: gray;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  text-decoration: underline;
}

.meet_result {
  color: gray;
  font-size: 25rpx;
  display: flex;
  margin: 30rpx 0rpx;
  justify-content: center;
}

.operate::after {
  border-radius: 20rpx;
  border: 1rpx solid #F3F3F3;
}

.operate-and-desc {
  width: 700rpx;
}
