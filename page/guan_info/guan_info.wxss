page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img {
  width: 650rpx;
  height: 401rpx; 
  border-radius: 40rpx;
  margin: 50rpx 50rpx 0rpx 50rpx;
}

.address-time-people {
  display: flex;
  flex-direction: column;
  margin: 10rpx 35rpx 30rpx 35rpx;
}

.address-time {
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  margin: 15rpx;
  padding: 20rpx;
  border-radius: 40rpx;
}

.opposite {
  display: flex;
  flex-direction: column;
  background-color: #FFFFFF;
  margin: 15rpx;
  padding: 20rpx;
  border-radius: 40rpx;
}

.info {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  padding: 6rpx;
}

.address-desc {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  padding-left: 65rpx;
}

.people-desc {
  font-size: 28rpx;
}

.time-desc {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  padding-left: 65rpx;
}

.info-img { 
  height: 45rpx;
  width: 45rpx; 
  padding-right: 20rpx;
}

.address-text { 
  font-size:28rpx; 
}

.time-text {
  font-size:28rpx; 
  color: gray;
}

.people-info { 
  text-align: center;
  font-size: 25rpx;
  color: gray;
  padding: 0rpx 10rpx;
  margin: 10rpx;
}

.operate {
  width: 90%;
  color: white;
  background-color: orangered;
  font-size: 32rpx;
  border-radius: 40rpx;
}

.operate::after {
  border-radius: 20rpx;
  border: 1rpx solid #F3F3F3;
}
