page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img {
  width: 99%;
  height: 30%; 
  padding: 10rpx;
  background-color: #FFFFFF;
}

.time-address-person {
  width: 80%;
  height: 40%; 
  padding: 5%;
  display: flex;
  flex-direction: column;
}

.time {
  padding: 20rpx;
  font-size:40rpx;
}

.address {
  padding: 20rpx;
  font-size:40rpx; 
}

.person {
  padding: 20rpx;
  font-size:40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap; 
}

.person-info { 
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
  margin: 0 10rpx;
  padding: 10rpx; 
}

.operate {
  text-align: center;
  width: 80%;
  height: 100rpx;
  color: #000000;
  background-color: #FF6600;
}