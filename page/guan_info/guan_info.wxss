page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img {
  width: 740rpx;
  height: 370rpx; 
  padding: 5rpx;
  background-color: #FFFFFF;
}

.address-time-people {
  display: flex;
  flex-direction: column;
  padding: 30rpx 60rpx;
}

.info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
}

.address-desc {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  padding-left: 65rpx;
}

.address-info {
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
  margin: 0 10rpx 10rpx 10rpx;
  padding: 10rpx; 
}

.time-desc {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  padding-left: 65rpx;
}

.time-info {
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
  margin: 0 10rpx 10rpx 10rpx;
  padding: 10rpx; 
}

.info-img { 
  height: 45rpx;
  width: 45rpx; 
  padding-right: 20rpx;
}

.info-text { 
  font-size:40rpx; 
}

.people-desc {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  padding-left: 65rpx;
}

.people-info { 
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
  margin: 0 10rpx 10rpx 10rpx;
  padding: 10rpx; 
}

.operate {
  width: 80%;
  color: #000000;
  background-color: #FF6600;
}