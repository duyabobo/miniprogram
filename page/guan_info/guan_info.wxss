page {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img {
  width: 99%;
  height: 30%; 
  padding: 5rpx;
  background-color: #FFFFFF;
}

.time-address-person {
  width: 80%;
  height: 40%; 
  padding: 5%;
  display: flex;
  flex-direction: column;
}

.info {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin: 10rpx;
}

.info-img {
  flex: 1;
  height: 50rpx;
  width: 50rpx;
  margin: 10rpx;
}

.info-text {
  flex: 8;
  font-size:30rpx;
  margin-left: 10rpx;
  padding: 10rpx;
}

.person {
  flex: 8;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
}

.person-info { 
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
  margin: 0 10rpx 10rpx 10rpx;
  padding: 10rpx; 
}

.operate {
  width: 80%;
  color: #000000;
  background-color: #FF6600;
}