.func-group-list {
  margin: 22rpx 0px;
}
.func-group {
  display: flex;
  align-items: center;
  margin: 4rpx 0;
  padding: 10rpx 30rpx;
  border-radius: 4rpx;
  background-color: #FFFFFF;
}
.func-name{
  flex: 1;
  align-items: center;
  line-height: 60rpx;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.login-input {
  background-color: #FFFFFF;
}
image {
  width: 50rpx;
  height: 50rpx;
}

.images {
  display: flex;
  flex-direction: row; 
  height: 50%;
}

.verify { 
  flex: 1;
}  
