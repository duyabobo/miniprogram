page {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
}

.my-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
  width: 100%;
}

.mobile { 
  text-align: center;  
}

.main-group-list {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin: 20rpx 0rpx 0rpx 0rpx;
  background-color: white; 
}
.main-group {
  display: flex;
  margin: 0rpx 20rpx;
  flex-direction: column; 
}
.main-group-content {
  display: flex;
  align-items: center;
  padding: 25rpx 0rpx;
}
button {
  border-radius: 20rpx;
}
button::after {
  border-radius: 20rpx;
  border:0rpx;
}
.line {
  height: 1rpx;
  background-color: #f3f3f3;
}

.button-hover {
  color: black !important;
  background-color: white !important;
}

.func-name{
  flex: 10;
  text-align: left;
  line-height: 50rpx;
  font-size: 30rpx;
}
.func-desc {
  flex: 10;
  color: gray;
  font-size: 22rpx;
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
}

.login-input {
  background-color: #FFFFFF;
}

.head-img {
  width: 200rpx;
  height: 150rpx;
  margin: 40rpx 0rpx;
}

.images {
  display: flex;
  flex-direction: row; 
  height: 50%;
}

.verify { 
  flex: 1;
}  

.online_service {
  width: 60%;
}

.logout {
  text-align: center;
  margin: 40rpx;
  font-size: 25rpx;
  width: 100rpx;
  color: orangered;
}
