.my_info {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
}

.mobile { 
  text-align: center;  
}

.func-group-list {
  margin: 8px 0px;
}
.func-group {
  display: flex;
  align-items: center;
  margin: 2px 0;
  padding: 15rpx 30rpx;
  background-color: #FFFFFF;
}
.func-img {
  flex: 1;
  margin-right: 20rpx;
}
.func-name{
  flex: 10;
  text-align: left;
  line-height: 50rpx;
  font-size: 28rpx;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.login-input {
  background-color: #FFFFFF;
}

.head-img {
  width: 100rpx;
  height: 100rpx;
  margin: 15px 0rpx;
}

image {
  width: 50rpx;
  height: 50rpx;
}

.images {
  display: flex;
  flex-direction: row; 
  height: 50%;
}

.verify { 
  flex: 1;
}  

.online_service {
  width: 60%;
}
