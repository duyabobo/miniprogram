<scroll-view class="container" scroll-y="true">
  <button class="requirement" data-op_type="{{sex.opType}}" data-item_list="{{sex.choiceList}}" bindtap="upsertRequirement">
    <view class="desc">{{sex.desc}}</view>
    <view class="value">{{sex.value}}</view>
    <view class="navigator-arrow"></view>
  </button>

  <picker mode="date" value="{{birthYear.defaultValue}}" bindchange="updateBirthYear" fields="year">
    <button class="requirement">
      <view class="desc">{{birthYear.desc}}</view>
      <view class="value">{{birthYear.value}}</view>
      <view class="navigator-arrow"></view>
    </button>
  </picker>
  
  <picker mode="selector" range="{{heightChoiceList}}" value="{{height.defaultValue}}" bindchange="updateHeight">
    <button class="requirement">
      <view class="desc">{{height.desc}}</view>
      <view class="value">{{height.value}}</view>
      <view class="navigator-arrow"></view>
    </button>
  </picker>

  <picker mode="selector" range="{{weightChoiceList}}" value="{{weight.defaultValue}}" bindchange="updateWeight">
    <button class="requirement">
      <view class="desc">{{weight.desc}}</view>
      <view class="value">{{weight.value}}</view>
      <view class="navigator-arrow"></view>
    </button>
  </picker>

  <button class="requirement" wx:for="{{otherRequirementList}}" wx:key="id" data-op_type="{{item.opType}}" data-item_list="{{item.choiceList}}" data-id="{{item.id}}" bindtap="upsertRequirement">
    <view class="desc">{{item.desc}}</view>
    <view class="value">{{item.value}}</view>
    <view class="navigator-arrow"></view>
  </button>
</scroll-view>