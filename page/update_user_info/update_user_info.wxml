<view class="question-and-background">
  <image class='background' src="{{question_background}}" mode="aspectFill"></image>
  <view class='question'>{{question}}</view>
</view>
  
<view class='answers'>
  <button wx:for="{{answers}}" wx:key="key" data-key="{{user_info_key}}" data-value='{{item.value}}' data-user_info_type='{{user_info_type}}' class='answer' bindtap="change_base_user_info">{{item.key}}</button> 
</view>

<view class='steps'>
  <image class='step' src="{{back_icon}}" data-incr='-1' bindtap='change_step'></image>
  <view class='just_for_fun'>
    <navigator class="just_for_fun_text" wx:if="{{user_info_type != 1}}" url="{{match_url}}" open-type="reLaunch">随便逛逛</navigator>
  </view>
  <image class='step' src="{{front_icon}}" data-incr='1' bindtap='change_step'></image> 
</view>
