page {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
  background-color: #f5f5f5;
} 

.guan {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 170rpx;
  width: 100%;
  align-items: center;
  margin: 0rpx 0rpx 20rpx 0rpx;
  padding: 10rpx 0rpx;
  background-color: #FFFFFF;
}

.img {
  width: 200rpx;
  height: 150rpx;
  margin: 10rpx;
  border-radius: 10rpx;
}

.img-default {
  width: 200rpx;
  height: 150rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  background-color: #f5f5f5;
}

.address-time-status {
  width: 440rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  padding-top: 20rpx;
}

.info {
  display: flex;
  width: 420rpx;
  flex-direction: row;
  align-items: center;
}

.info-default {
  display: flex;
  width: 420rpx;
  flex-direction: row;
  align-items: center;
  background-color: #f5f5f5;
}

.info-img {
  width: 35rpx;
  height: 35rpx;
  padding-right: 5rpx;
}

.address {
  font-size: 26rpx; 
  color: gray;
}

.time {
  font-size: 30rpx; 
}

.state {
  font-size: 35rpx; 
  padding-left: 35rpx;
}
