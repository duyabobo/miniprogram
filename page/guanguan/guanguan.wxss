.page {
  display: flex;
  flex-direction: column;
  align-items: center; 
}

.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 10rpx; /* Add padding between columns */
  width: 100%;
  box-sizing: border-box;
}

.guan {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx;
  margin: 20rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  width: 80%;
  box-sizing: border-box;
}

.img,
.img-default {
  width: 400rpx;
  height: 240rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  background-color: #f5f5f5; /* Set default background color */
}

.address-time-status {
  display: flex;
  width: 400rpx;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 0 20rpx;
}

.info,
.info-default {
  display: flex;
  width: 100%; /* Make width 100% to occupy full width of the column */
  flex-direction: row;
  align-items: center;
}

.info-default {
  background-color: #f5f5f5; /* Set default background color */
}

.info-img {
  width: 35rpx;
  height: 35rpx;
  padding-right: 5rpx;
}

.address {
  font-size: 25rpx;
  color: gray;
}

.time {
  font-size: 30rpx;
}
