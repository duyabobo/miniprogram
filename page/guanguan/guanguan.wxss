page {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
} 

.guan {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 225rpx;
  align-items: center;
  margin: 35rpx 35rpx;
  background-color: #FFFFFF;
  border-radius: 40rpx;
}

.img {
  width: 378rpx;
  height: 225rpx;
  border-radius: 40rpx;
}

.address-time-status {
  width: 320rpx;
  height: 225rpx;
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}

.info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.info-img {
  width: 35rpx;
  height: 35rpx;
  padding-right: 5rpx;
}

.address {
  font-size: 30rpx; 
}

.time {
  font-size: 30rpx; 
  color: gray;
}

.state {
  font-size: 35rpx; 
  padding-left: 35rpx;
}
