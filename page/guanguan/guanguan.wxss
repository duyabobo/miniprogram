page {
  display: flex;
  flex-direction: column;
  align-items: center; 
} 

.question {
  flex-shrink: 0;
  display: flex;
  width: 100%;
  margin: 2px 0;
  padding: 10rpx;
  flex-direction: column;
  background-color: #FFFFFF;
}

.question-title {
  padding: 10px;
  font-size: 38rpx;
}

.question-info {
  display: flex;
  flex-direction: row;
  justify-content: left;
  padding-left: 10px;
}

.info {
  width: 30%;
  font-size: 25rpx;
  color: #FF5500;
}
