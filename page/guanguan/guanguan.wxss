page {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
} 

.guan {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height: 20%;
  align-items: center;
  margin: 2px 0;
  padding: 10rpx 10rpx;
  background-color: #FFFFFF;
}

.img {
  width: 450rpx;
  height: 225rpx;
  padding: 5rpx;
}

.address-time-status {
  width: 260rpx;
  height: 225rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.info-img {
  width: 35rpx;
  height: 35rpx;
}

.address {
  font-size: 35rpx; 
}

.time {
  font-size: 35rpx; 
}

.state {
  font-size: 35rpx; 
  padding-left: 35rpx;
}
