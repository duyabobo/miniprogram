page {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
} 

.guan {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height: 20%;
  align-items: center;
  margin: 2px 0;
  padding: 10rpx 10rpx;
  background-color: #FFFFFF;
}

.img {
  width: 450rpx;
  height: 225rpx;
  padding: 5rpx;
}

.address-time-status {
  width: 40%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  justify-content: space-around;
  align-items: flex-start;
}

.info {
  font-size: 24rpx;
}