page {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;  
} 

.question {
  display: flex;
  width: 95%;
  margin: 20rpx 0;
  flex-direction: column;
}

.question-title {
  font-size: 30rpx;
}

.question-info {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.static-info {
  width: 35%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.dynamic-info {
  width: 35%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.info {
  font-size: 25rpx;
  color: #FF6600;
}
