page {
  display: flex;
  flex-direction: column;
  align-items: center; 
} 

.question {
  display: flex;
  width: 100%;
  margin: 2rpx 0;
  padding: 10rpx;
  flex-direction: column;
  background-color: #FFFFFF;
}

.question-title {
  padding: 20rpx;
  font-size: 30rpx;
}

.question-info {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.static-info {
  width: 35%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.dynamic-info {
  width: 35%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.info {
  font-size: 25rpx;
  color: #FF6600;
}
